/* Usando Order By */
SELECT
	*
FROM
	ALUNO
ORDER BY
	NUMERO;
	
SELECT
	*
FROM
	ALUNO
ORDER BY
	1; /* CLASSIFICANDO PELO NÚMERO DA COLUNA */

SELECT
	*
FROM
	ALUNO
ORDER BY
	2;
	
SELECT
	*
FROM
	ALUNO
ORDER BY
	NUMERO,
	NOME;
	
SELECT
	*
FROM
	ALUNO
ORDER BY
	1,
	2;

SELECT
	NOME
FROM
	ALUNO
ORDER BY
	1,
	2;
	
SELECT
	NOME
FROM
	ALUNO
ORDER BY
	NUMERO,
	NOME;

SELECT
	*
FROM
	ALUNO
ORDER BY
		1 ASC;

SELECT
	*
FROM
	ALUNO
ORDER BY
	1 DESC;

SELECT
	*
FROM
	ALUNO
ORDER BY
	1,
	2 DESC;

SELECT
	*
FROM
	ALUNO
ORDER BY
	1 DESC,
	2 DESC;
	
SELECT
	C.NOME,
	C.SEXO,
	IFNULL(C.EMAIL, 'CLIENTE SEM EMAIL') AS "E-MAIL",
	T.TIPO,
	T.NUMERO,
	E.BAIRRO,
	E.CIDADE,
	E.ESTADO
FROM
	CLIENTE C
INNER JOIN
	TELEFONE T
ON
	C.IDCLIENTE = T.ID_CLIENTE
INNER JOIN
	ENDERECO E
ON
	C.IDCLIENTE = E.ID_CLIENTE
ORDER BY
	1;

SELECT
	*
FROM
	V_RELATORIO
ORDER BY
	1;





















